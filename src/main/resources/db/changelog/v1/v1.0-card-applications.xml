<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1.0-0" author="dominik.andelic">
        <createTable tableName="card_applications">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" />
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="first_name" type="nvarchar">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="nvarchar">
                <constraints nullable="false" />
            </column>
            <column name="oib" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar" />
        </createTable>

        <createIndex tableName="card_applications" indexName="oib_idx">
            <column name="oib" />
        </createIndex>
    </changeSet>
</databaseChangeLog>